# MongoDB connection (required)
MONGO_URL=mongodb://localhost:27017
DB_NAME=jobnexus

# Optional: JWT secret (defaults to jobnexus-secret-key-2024)
# JWT_SECRET=your-secret-key

# Optional: CORS origins (comma-separated). Use * for all, or e.g. http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Optional: enable hot reload when running with python server.py
# DEV=1

# ========================
# Password reset email (optional)
# If SMTP is not configured, reset links are logged to the backend console.
# ========================
FRONTEND_URL=http://localhost:3000
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TLS=1

# In development only: include token in the API response
DEV_RETURN_RESET_TOKEN=0

# ========================
# Google login
# ========================
GOOGLE_CLIENT_ID=
